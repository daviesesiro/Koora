<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Koora</title>
    @Styles.Render("~/Content/AdminCss")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body id="page-top">
    <header>
        <!-- Top Navbar  -->
        <div class="top-menubar">
            <div class="topmenu">
                <div class="container">
                    <div class="row">
                        <div class="col-md-5">
                            <ul class="list-inline top-contacts">
                                <li>
                                    <i class="fa fa-envelope"></i> Email: <a href="mailto:Koora@gmail.com">Koora@gmail.com</a>
                                </li>
                                <li>
                                    <i class="fa fa-phone"></i> Hotline: (234) 90 222 33354
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-7">
                            <ul class="list-inline top-data">
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <nav class="navbar navbar-expand-lg navbar-light" id="mainNav" data-toggle="affix">
            <div class="container">
                <a href="/Admin/index">
                    <img src="~/Content/img/KooraLogoWeb.png" alt="Koora Logo" class="navbar-brand smooth-scroll" height="50" width="100" />
                </a>
                <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item">@Html.ActionLink("Dashboard", "index", "Admin", new { area = "" }, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item">@Html.ActionLink("Places", "Place", "Admin", new { area = "" }, new { @class = "nav-link smooth-scroll" })</li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle smooth-scroll" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Election</a>
                            <div class="dropdown-menu dropdown-cust" aria-labelledby="navbarDropdownMenuLink">
                                @Html.ActionLink("Events", "Event", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Positions", "Position", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                                @Html.ActionLink("Nominees", "Nominee", "Admin", new { area = "" }, new { @class = "dropdown-item" })
                            </div>
                        </li>
                        <li>
                            <div class="top-menubar-nav">
                                <div class="topmenu ">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-md-9">
                                                <ul class="list-inline top-contacts">
                                                    <li>
                                                        <i class="fa fa-envelope"></i> Email: <a href="mailto:info@htmlstream.com">info@htmlstream.com</a>
                                                    </li>
                                                    <li>
                                                        <i class="fa fa-phone"></i> Hotline: (1) 396 4587 99
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="col-md-3">
                                                <ul class="list-inline top-data">                                                    
                                                    <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "log-top", id = "loginLink" })</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
        @RenderBody()
    
    


   <!--====================================================
                          FOOTER
    ======================================================-->
    <footer>
     

        <div id="footer-bottom">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div id="footer-copyrights">
                            <p>Copyrights &copy; @DateTime.Now.Year All Rights Reserved by Koora.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <a href="#home" id="back-to-top" class="btn btn-sm btn-green btn-back-to-top smooth-scrolls hidden-sm hidden-xs" title="home" role="button">
            <i class="fa fa-angle-up"></i>
        </a>
    </footer>


    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
